<!-- Success Flash -->
<% if (success && success.length) { %>
<div class="row">
  <div
    class="alert alert-success alert-dismissible col-8 offset-2"
    role="alert"
    id="liveAlertPlaceholder"
  >
    <%= success %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>

<!-- Error Flash -->

<% if (error && error.length) { %>
<div class="row">
  <div
    class="alert alert-danger alert-dismissible col-8 offset-2"
    role="alert"
    id="liveAlertPlaceholder"
  >
    <%= error %>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
</div>
<% } %>
